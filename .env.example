# Slack Feeder Environment Variables Example
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Required: Slack Bot Token (starts with xoxb-)
# Get from: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-token-here

# Required: Path to Google Drive API credentials JSON file
# Get from: https://console.cloud.google.com
GOOGLE_DRIVE_CREDENTIALS_FILE=./path/to/credentials.json

# Optional: Google Drive folder ID where conversations should be stored
# If not set, files will be uploaded to Drive root
GOOGLE_DRIVE_FOLDER_ID=

# Optional: Google Drive token file path (default: ~/.config/slackfeeder/token.json)
GOOGLE_DRIVE_TOKEN_FILE=

# Optional: Output directory for exported files (default: slack_exports)
SLACK_EXPORT_OUTPUT_DIR=slack_exports

# Optional: Maximum export file size in MB (default: 100)
MAX_EXPORT_FILE_SIZE_MB=100

# Optional: Maximum messages per conversation (default: 50000)
MAX_MESSAGES_PER_CONVERSATION=50000

# Optional: Maximum date range in days (default: 365)
MAX_DATE_RANGE_DAYS=365

# Optional: Logging level (default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
